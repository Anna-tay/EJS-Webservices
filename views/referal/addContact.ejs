<!-- I am in here for the details page -->

<% if (title) { %>
    <h1><%- title %></h1>
    <p class="links"><a href="/account/<%- account_email%>">Logged in page</a></p>

    <% if (discount == 0) { %>
        <h2> Add a contact and start earning! You are currently at $0</h2>
    <% } else { %>
        <h2> Your discount is $ <%- discount%></h3>
    <% } %>
    <h3> For each person you add as a reference, you will get $50 refund, up to $2,000</h3>
    <form action="/account/addContact/<%- account_id%>" method="post" class="add-contact">
        <div>
        <label for="contact_firstname">* Contact first name: <input name="contact_firstname" type="text" require></label>
        </div>
        <br>
        <div>
            <label for="contact_lastname">* Contact Last name: <input name="contact_lastname" type="text" require></label>
        </div>
        <br>
        <div>
            <label for="contact_email">* Contact email: <input name="contact_email" type="text" require></label>
        </div>
        <br>
        <div>
            <label for="contact_phone">* Contact phone: <input name="contact_phone" type="text" require></label>
        </div>
        <br>
        <div>
            <label for="contact_relationship">Contact relationship: <input name="contact_relationship" type="text" ></label>
        </div>
        <br>
        <div>
            <label for="contact_info">Contact info: <input name="contact_info" type="text" ></label>
            <p>*Any extra information that would help.</p>
        </div>
        <br>

        <input type="hidden" name="account_id" value=<%- account_id %>>

        <button type="submit">Add Reference!</button>

      </form>

    <% } else {
      res.redirect('/')
    } %>

    <% messages() %>
